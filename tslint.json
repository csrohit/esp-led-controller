{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
      "no-console": false,
      "only-arrow-functions": false,
      "semicolon": true,
      "await-promise": true,
      "arrow-return-shorthand": true,
      "comment-format": true,
      "indent": [true, "tabs", 4],
      "no-floating-promises": true,
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-type-operator",
        "check-preblock",
        "check-postbrace"
      ],
      "quotemark": [true, "single"]
    },
    "rulesDirectory": []
  }